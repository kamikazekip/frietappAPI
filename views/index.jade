extends layout

block content
    h1 Admin panel
    p Welcome to the admin pannel

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Username:
                |  <span id='userInfoUsername'></span>
                br
                strong Password:
                |  <span id='userInfoPassword'></span>
                br
                strong Rights:
                |  <span id='userInfoRights'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Rights
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserPassword(type='password', placeholder='Password')
                input#inputUserRights(type='number', placeholder = 'Rights')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER